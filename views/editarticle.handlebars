<div>
        <h1 class="margin-bottom heading"><strong>Editing Your Article: {{article.title}}</strong></h1>
<br>
    <div class="card opaque">
        <div class="card-body">

            {{!-- create new article form --}}
            <form action="/submitEdittedArticle" method="POST">

                {{!-- title --}}
                <div class="form-group">
                    <label for="articleTitle">*Title:</label>
                    <input id="articleTitle" type="text" name="articleTitle" value="{{article.title}}" required>
                </div>

                {{!-- category selection --}}
                <div class="form-group">
                    <label for="categoryName">*Category:</label>
                    <label><input class="checkbox" type="checkbox" name="category" value="1"> Data Science</label>
                    <label><input class="checkbox" type="checkbox" name="category" value="2"> Health</label>
                    <label><input class="checkbox" type="checkbox" name="category" value="3"> Politics</label>
                    <label><input class="checkbox" type="checkbox" name="category" value="4"> Machine Learning</label>
                    <label><input class="checkbox" type="checkbox" name="category" value="5"> Javascript</label>
                    <label><input class="checkbox" type="checkbox" name="category" value="6"> Green Energy</label>
                    <label><input class="checkbox" type="checkbox" name="category" value="7"> Business</label>
                    <label><input class="checkbox" type="checkbox" name="category" value="8"> Travel</label>
                    <label><input class="checkbox" type="checkbox" name="category" value="9"> Digitalisation</label>
                    <label><input class="checkbox" type="checkbox" name="category" value="10"> Gaming</label>
                </div>

                {{!-- overview description --}}
                <div class="form-group">
                    <label for="overview">*Overview:</label>
                    <input id="overview" type="text" name="overview" value="{{article.overview}}" required>
                </div>

                {{!-- text area for article --}}
                <div class="form-group">
                    {{!-- <label for="content">Article Content:</label> --}}
                    <textarea id="content" name="content" rows="20">{{article.content}}</textarea>
                </div>

                {{!-- publish button --}}
                <div class="form-group">
                    <button type="submit">Publish</button>
                </div>

            </form>
        </div>
    </div>
</div>