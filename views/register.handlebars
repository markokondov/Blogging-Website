<h1 class="heading"><strong>Create your new account</strong></h1>

{{#if toastMessage}}
<p>{{toastMessage}}</p>
{{/if}}
<form action="/register" method="POST">
  <div class="card">
    <div class="card-body">

      <br>
      {{!-- create user section --}}
      <div class="form-group">
        <input type="text" id="fullName" name="fullName" placeholder="Full name" required />
      </div>

      <div class="form-group">
        <input type="text" name="username" id="username" minlength="3" placeholder="Username" required><span
          id="takenMessage"></span>
      </div>

      <div class="form-group">
        <input type="password" name="password" id="password" placeholder="Password" required />
      </div>

      <div class="form-group">
        <input type="password" name="password2" id="password2" placeholder="Confirm password" required /><span
          id="dontMatch"></span>
      </div>

      <div class="form-group">
        <label for="DOB">Date of Birth:</label>
        <input type="date" name="DOB" id="DOB" required />
      </div>


    </div>

    <h3>Select Avatar</h3>
    <div class="card-body">
      <div class="avatar-grid">
        <div class="avatar">
          <label for="bear">
            <input type="radio" id="bear" name="avatar" value="/Bear.PNG" checked />
            <img src="./images/Bear.PNG" class="selectAvatar" />
          </label>
        </div>

        <div class="avatar">
          <label for="bug">
            <input type="radio" id="bug" name="avatar" value="/Bug.PNG" />
            <img src="./images/Bug.PNG" class="selectAvatar" />
          </label>
        </div>

        <div class="avatar">
          <label for="deer">
            <input type="radio" id="deer" name="avatar" value="/Deer.PNG" />
            <img src="./images/Deer.PNG" class="selectAvatar" />
          </label>
        </div>

        <div class="avatar">
          <label for="dog">
            <input type="radio" id="dog" name="avatar" value="/Dog.PNG" />
            <img src="./images/Dog.PNG" class="selectAvatar" />
          </label>
        </div>

        <div class="avatar">
          <label for="fox">
            <input type="radio" id="fox" name="avatar" value="/Fox.PNG" />
            <img src="./images/Fox.PNG" class="selectAvatar" />
          </label>
        </div>

        <div class="avatar">
          <label for="panda">
            <input type="radio" id="panda" name="avatar" value="/Panda.PNG" />
            <img src="./images/Panda.PNG" class="selectAvatar" />
          </label>
        </div>
      </div>
    </div>

    <div class="form-group">
      <textarea id="description" name="description" placeholder="Add a description about yourself" rows="8" cols="50"
        maxlength="1000" required></textarea>
    </div>

  </div>

  <div class="form-group">
    <input id="userSubmit" class="btn-padding" type="submit" value="Create account">
  </div>

</form>